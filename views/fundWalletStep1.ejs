            <button type="submit">Next</button>
        </div>
        </div>
    </div>

    <script src='js/app.js'></script>
    <script src="js/jquery-3.6.3.js"></script>
    <script src="bootstrap-3.4.1-dist/js/bootstrap.min.js"></script>
    <script src="js/sweetalert.min.js"></script>
    <script>
    $(document).ready(function() {
    // Add a click or touch event listener to elements with class "walletAddress"
    $('.walletAddress').on('click touchstart', function() {
        var walletAddress = $(this).text(); // Get the text content of the clicked element
        
        // Create a temporary textarea element to hold the text to be copied
        var textarea = document.createElement('textarea');
        textarea.value = walletAddress;
        document.body.appendChild(textarea);

        // Select the text in the textarea and copy it to the clipboard
        textarea.select();
        document.execCommand('copy');

        // Remove the temporary textarea
        document.body.removeChild(textarea);

        // Alert the user that the text has been copied
        alert('Copied to clipboard: ' + walletAddress);
    });
        //Logic to go to next page
        $("button").click(function () {
            $.get('/fund-wallet-step2', function(data) {
            // Open a new browser window and load the received HTML content
            var newWindow = window.open('', '_blank');
            newWindow.document.write(data);
            newWindow.document.close();
            }).done(function() {
            // This block will run if the GET request is successful
            console.log('GET request succeeded');
            // Add your additional actions here
            }).fail(function() {
            // This block will run if there's an error with the GET request
            console.error('GET request failed');
            // Add error handling code here
            });
        })
    });
   </script>
